{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        //
        "outDir": "../js",
        "rootDir": ".",
        "incremental": true,
        "sourceMap": true,
        //
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        //
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        //
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": true,
        "removeComments": true // todo
    },
    "include": [
        "**/*.ts"
    ]
}
